public class Chunker
{
  string! src;
  int ChunkSize;
  int n;  // the number of characters returned so far

  public string NextChunk()
  {
    string s = src.Substring(n, ChunkSize);
    n += ChunkSize;
    return s;
  }

  public Chunker(string! source, int chunkSize)
  {
    src = source;
    ChunkSize = chunkSize;
    n = 0;
  }
}
